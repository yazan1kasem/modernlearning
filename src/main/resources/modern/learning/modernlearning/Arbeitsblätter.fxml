<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.awt.geom.QuadCurve2D.Double?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane fx:id="ArbeitsblaetterPane" prefHeight="640.0" prefWidth="1000.0" style="-fx-background-color: #FFAB2F"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="modern.learning.modernlearning.Arbeitsblätter">

    <children>
        <Button layoutX="30" layoutY="500" fx:id="ZurückButton" onMouseClicked="#zurück" text="ZURÜCK" mnemonicParsing="false"
                style="-fx-font-size: 16px; -fx-padding: 5 10; -fx-background-color: white; -fx-text-fill: #FF8C00; -fx-border-radius: 5px; -fx-border-color: black; -fx-border-width: 2px; -fx-background-radius: 5px; -fx-border-insets: -1px"/>
        <FlowPane  alignment="TOP_LEFT">
            <VBox fx:id="ArbeitsblaetterPanel" spacing="10" prefWidth="800" prefHeight="550" style="-fx-background-color: #FFAB2F; -fx-padding: 30 0 0 0">
                <!-- Header with Navigation buttons and Year/Month display -->
                <HBox alignment="CENTER" spacing="20" style="-fx-animated: ex; -fx-padding: 20 0 30 0;">
                    <!-- Add your header content here -->
                     </HBox>
                <!-- Add buttons for Arbeitsblätter -->
                <FlowPane fx:id="Arbeitsblaetter" hgap="10.0" prefHeight="400" prefWidth="700" vgap="5.0" alignment="TOP_CENTER">
                    <!-- You can dynamically add Arbeitsblatt buttons here based on your logic -->
                </FlowPane>
            </VBox>
        </FlowPane>
        <ImageView fx:id="pdfIcon" onMouseClicked="#onPdfIconClicked" fitWidth="100" fitHeight="100" pickOnBounds="true" preserveRatio="true">
            <!-- Setzen Sie hier den Pfad zu Ihrem PDF-Icon -->
            <image>
                <Image url="file:/s/Media/    .png"/>
            </image>
        </ImageView>
          </children>
</AnchorPane>