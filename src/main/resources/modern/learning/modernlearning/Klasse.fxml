<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.awt.geom.QuadCurve2D.Double?>

<AnchorPane fx:id="ClassSelection" prefHeight="640.0" prefWidth="1000.0" style="-fx-background-color: #FFAB2F"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="modern.learning.modernlearning.Klasse" >
    <children>
        <FlowPane prefWidth="${ClassSelection.width}" prefHeight="${ClassSelection.height}" alignment="CENTER">
            <VBox fx:id="classSelectionPanel" spacing="20" prefWidth="800" prefHeight="550" style=" -fx-background-color: #FFAB2F; -fx-padding: 0 0 0 0" >
                <!-- Title bar with the name "ModernLearning" -->
                <HBox alignment="CENTER" spacing="0" style="-fx-animated: ex; -fx-padding: 10 0 10 0; -fx-background-color: #FF8C00;">
                    <Text text="ModernLearning" style="-fx-font-size: 30px; -fx-fill: white;"/>
                </HBox>
                <!-- Add buttons for class selection -->
                <FlowPane fx:id="classSelection" hgap="10.0" prefHeight="400" prefWidth="700" vgap="5.0" alignment="CENTER">
                    <Button fx:id="1" onMouseClicked="#Fach" text="1. Klasse" style="-fx-cursor: hand; -fx-padding: 15px; -fx-font-size: 20px; -fx-background-color: #FFFFFF; -fx-text-fill: #FFA500;-fx-border-radius: 5px;-fx-border-color: black; -fx-border-width: 2px; -fx-background-radius: 5px;-fx-border-insets: -1px"/>
                    <Button fx:id="2" onMouseClicked="#Fach" text="2. Klasse" style="-fx-cursor: hand; -fx-padding: 15px; -fx-font-size: 20px; -fx-background-color: #FFFFFF; -fx-text-fill: #FFA500;-fx-border-radius: 5px;-fx-border-color: black; -fx-border-width: 2px; -fx-background-radius: 5px;-fx-border-insets: -1px"/>
                    <Button fx:id="3" onMouseClicked="#Fach" text="3. Klasse" style="-fx-cursor: hand; -fx-padding: 15px; -fx-font-size: 20px; -fx-background-color: #FFFFFF; -fx-text-fill: #FFA500;-fx-border-radius: 5px;-fx-border-color: black; -fx-border-width: 2px; -fx-background-radius: 5px;-fx-border-insets: -1px"/>
                    <Button fx:id="4" onMouseClicked="#Fach" text="4. Klasse" style="-fx-cursor: hand; -fx-padding: 15px; -fx-font-size: 20px; -fx-background-color: #FFFFFF; -fx-text-fill: #FFA500;-fx-border-radius: 5px;-fx-border-color: black; -fx-border-width: 2px; -fx-background-radius: 5px;-fx-border-insets: -1px"/>
                    <Button fx:id="5" onMouseClicked="#Fach" text="5. Klasse" style="-fx-cursor: hand; -fx-padding: 15px; -fx-font-size: 20px; -fx-background-color: #FFFFFF; -fx-text-fill: #FFA500;-fx-border-radius: 5px;-fx-border-color: black; -fx-border-width: 2px; -fx-background-radius: 5px;-fx-border-insets: -1px"/>
                </FlowPane>
                <!-- Add buttons for Kalender and Dokumente -->
                <FlowPane hgap="10.0" prefHeight="50" prefWidth="700" vgap="5.0" alignment="CENTER">
                    <Button layoutX="30" layoutY="10" fx:id="KalenderButton" onMouseClicked="#Kalender" text="KALENDER"  mnemonicParsing="false" style="-fx-cursor:hand;-fx-font-size: 20px; -fx-padding: 10 20; -fx-background-color: white; -fx-text-fill: #FF8C00;-fx-border-radius: 5px;-fx-border-color: black;-fx-border-width: 2px; -fx-background-radius: 5px;-fx-border-insets: -1px"/>
                    <Button layoutX="30" layoutY="40" fx:id="DokumentButton" onMouseClicked="#Dokumente" text="DOKUMENTE"  mnemonicParsing="false" style="-fx-cursor:hand;-fx-font-size: 20px; -fx-padding: 10 20; -fx-background-color: white; -fx-text-fill: #FF8C00;-fx-border-radius: 5px;-fx-border-color: black;-fx-border-width: 2px; -fx-background-radius: 5px;-fx-border-insets: -1px"/>
                </FlowPane>
            </VBox>
        </FlowPane>
    </children>
</AnchorPane>