<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.awt.geom.QuadCurve2D.Double?>

<AnchorPane fx:id="ClassSelection" prefHeight="640.0" prefWidth="1000.0" style="-fx-background-color: #FFAB2F"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="modern.learning.modernlearning.Fach" >
    <children>
        <FlowPane prefWidth="${ClassSelection.width}" prefHeight="${ClassSelection.height}" alignment="CENTER">
            <VBox fx:id="classSelectionPanel" spacing="0" prefWidth="800" prefHeight="550" style=" -fx-background-color: #FFAB2F; -fx-padding: 30 0 0 0" >
                <!-- Header with Navigation buttons and Year/Month display -->
                <HBox alignment="CENTER"   spacing="0" style=" -fx-animated: ex; -fx-padding: 20 0 30 0" >
                </HBox>
                <!-- Add buttons for subject selection -->
                <FlowPane fx:id="subjectSelection" hgap="10.0" prefHeight="400" prefWidth="700" vgap="5.0" alignment="TOP_CENTER">
                    <Button fx:id="mathButton" onAction="#handleSubjectSelection" text="Mathe" style="-fx-cursor: hand; -fx-padding: 10px; -fx-font-size: 18px; -fx-background-color: #FFFFFF; -fx-text-fill: #FFA500;-fx-border-radius: 5px;-fx-border-color: black; -fx-border-width: 2px; -fx-background-radius: 5px;-fx-border-insets: -1px"/>
                    <Button fx:id="bmsvButton" onAction="#handleSubjectSelection" text="Bmsv" style="-fx-cursor: hand; -fx-padding: 10px; -fx-font-size: 18px; -fx-background-color: #FFFFFF; -fx-text-fill: #FFA500;-fx-border-radius: 5px;-fx-border-color: black; -fx-border-width: 2px; -fx-background-radius: 5px;-fx-border-insets: -1px"/>
                    <Button fx:id="deutschButton" onAction="#handleSubjectSelection" text="Deutsch" style="-fx-cursor: hand; -fx-padding: 10px; -fx-font-size: 18px; -fx-background-color: #FFFFFF; -fx-text-fill: #FFA500;-fx-border-radius: 5px;-fx-border-color: black; -fx-border-width: 2px; -fx-background-radius: 5px;-fx-border-insets: -1px"/>
                    <Button fx:id="misButton" onAction="#handleSubjectSelection" text="MIS" style="-fx-cursor: hand; -fx-padding: 10px; -fx-font-size: 18px; -fx-background-color: #FFFFFF; -fx-text-fill: #FFA500;-fx-border-radius: 5px;-fx-border-color: black; -fx-border-width: 2px; -fx-background-radius: 5px;-fx-border-insets: -1px"/>
                </FlowPane>
            </VBox>
        </FlowPane>
        <Button layoutX="30" layoutY="10" fx:id="ZurückButton" onMouseClicked="#zurück" text="ZURÜCK"  mnemonicParsing="false" style="-fx-font-size: 16px; -fx-padding: 5 10; -fx-background-color: white; -fx-text-fill: #FF8C00;-fx-border-radius: 5px;-fx-border-color: black;-fx-border-width: 2px; -fx-background-radius: 5px;-fx-border-insets: -1px"/>
    </children>
</AnchorPane>

