<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.awt.geom.QuadCurve2D.Double?>

<AnchorPane fx:id="ClassSelection" prefHeight="640.0" prefWidth="1000.0" style="-fx-background-color: #FFAB2F"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="modern.learning.modernlearning.Fach">
    <children>
        <FlowPane prefWidth="${ClassSelection.width}" prefHeight="${ClassSelection.height}" alignment="CENTER">
            <VBox fx:id="classSelectionPanel" spacing="0" prefWidth="800" prefHeight="550" style=" -fx-background-color: #FFAB2F; -fx-padding: 30 0 0 0" >
                <!-- Header with Navigation buttons and Year/Month display -->
                <HBox alignment="CENTER" spacing="0" style="-fx-animated: ex; -fx-padding: 10 0 10 0; -fx-background-color: #FF8C00;">
                    <Text text="Fach" style="-fx-font-size: 30px; -fx-fill: white;"/>
                </HBox>

                <!-- Text "Wählen Sie ein Fach aus" -->
                <Text text="Wählen Sie ein Fach aus:" style="-fx-font-size: 18px; -fx-text-fill: white;"/>

                <!-- Add buttons for subject selection with adjusted size -->
                <FlowPane fx:id="subjectSelection" hgap="10.0" prefHeight="400" prefWidth="700" vgap="20.0" alignment="CENTER">
                    <Button fx:id="MATHE" onMouseClicked="#Arbeitsblaetter" text="Mathe" style="-fx-cursor: hand; -fx-padding: 20px; -fx-font-size: 18px; -fx-background-color: #FFFFFF; -fx-text-fill: #FFA500;-fx-border-radius: 5px;-fx-border-color: black; -fx-border-width: 2px; -fx-background-radius: 5px;-fx-border-insets: -1px; -fx-min-width: 200px; -fx-max-width: 25%;"/>
                    <Button fx:id="BMSV" onMouseClicked="#Arbeitsblaetter" text="Bmsv" style="-fx-cursor: hand; -fx-padding: 20px; -fx-font-size: 18px; -fx-background-color: #FFFFFF; -fx-text-fill: #FFA500;-fx-border-radius: 5px;-fx-border-color: black; -fx-border-width: 2px; -fx-background-radius: 5px;-fx-border-insets: -1px; -fx-min-width: 200px; -fx-max-width: 25%;"/>
                    <Button fx:id="DEUTSCH" onMouseClicked="#Arbeitsblaetter" text="Deutsch" style="-fx-cursor: hand; -fx-padding: 20px; -fx-font-size: 18px; -fx-background-color: #FFFFFF; -fx-text-fill: #FFA500;-fx-border-radius: 5px;-fx-border-color: black; -fx-border-width: 2px; -fx-background-radius: 5px;-fx-border-insets: -1px; -fx-min-width: 200px; -fx-max-width: 25%;"/>
                    <Button fx:id="MIS" onMouseClicked="#Arbeitsblaetter" text="MIS" style="-fx-cursor: hand; -fx-padding: 20px; -fx-font-size: 18px; -fx-background-color: #FFFFFF; -fx-text-fill: #FFA500;-fx-border-radius: 5px;-fx-border-color: black; -fx-border-width: 2px; -fx-background-radius: 5px;-fx-border-insets: -1px; -fx-min-width: 200px; -fx-max-width: 25%;"/>
                </FlowPane>
            </VBox>
        </FlowPane>
        <Button layoutX="30" layoutY="10" fx:id="ZurückButton" onMouseClicked="#zurück" text="ZURÜCK"  mnemonicParsing="false" style="-fx-cursor:hand;-fx-font-size: 16px; -fx-padding: 5 10; -fx-background-color: white; -fx-text-fill: #FF8C00;-fx-border-radius: 5px;-fx-border-color: black;-fx-border-width: 2px; -fx-background-radius: 5px;-fx-border-insets: -1px"/>
    </children>
</AnchorPane>

